{
  "name": "opinions.js",
  "version": "0.0.1",
  "description": "A small CLI tool that installs various configuration files for JS projects.",
  "main": "dist/index.js",
  "bin": {
    "opinions": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "test",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "link": "npm run build && npm link",
    "unlink": "npm unlink",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "publish": "np",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbredenberg/opinions.js.git"
  },
  "keywords": [
    "standards",
    "js",
    "ts",
    "prettier",
    "editorconfig",
    "cli",
    "config"
  ],
  "author": "Paul Bredenberg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pbredenberg/opinions.js.git"
  },
  "homepage": "https://github.com/pbredenberg/opinions.js#readme",
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.24",
    "conventional-changelog-cli": "^4.1.0",
    "np": "^10.2.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3"
  }
}